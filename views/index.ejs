<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Image Gallery - AUDIST HERBS</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Carousel Styles */
    .carousel {
      position: relative;
      width: 100%;
      max-width: 500px;
      max-height: 500px;
      margin: auto;
      overflow: hidden;
    }
    .carousel-images {
      display: flex;
      transition: transform 0.5s ease-in-out;
    }
    .carousel-images img {
      width: 100%;
      flex-shrink: 0;
    }
    .carousel-controls {
      position: absolute;
      top: 50%;
      width: 100%;
      display: flex;
      justify-content: space-between;
      transform: translateY(-50%);
    }
    .carousel-controls button {
      background: rgba(0, 0, 0, 0.5);
      color: white;
      border: none;
      padding: 10px;
      cursor: pointer;
    }
    .carousel-controls button:hover {
      background: rgba(0, 0, 0, 0.7);
    }
  </style>
</head>
<body>
  <!-- Header Section -->
  <header>
    <div class="header-container">
      <h1>AUDIST HERBS</h1>
    </div>
  </header>

  <!-- Main Content Section -->
  <div class="container">
    <h2>For the image source download, contact the mail provided <a href="#foots">here</a></h2>
    <div class="gallery">
      <% function renderFolder(folder) { %>
        <div class="folder">
          <h2><%= folder.name %></h2>
          <div class="subfolders">
            <% folder.subfolders.forEach(subfolder => { %>
              <details class="subfolder-details">
                <summary><h3><%= subfolder.name %></h3></summary>
                <div class="carousel">
                  <div class="carousel-images" id="carousel-<%= subfolder.name %>">
                    <% subfolder.subfolders.forEach(image => { %>
                      <img src="<%= image.path %>" alt="<%= image.name %>" />
                    <% }) %>
                  </div>
                  <div class="carousel-controls">
                    <button onclick="prevSlide('carousel-<%= subfolder.name %>')">❮</button>
                    <button onclick="nextSlide('carousel-<%= subfolder.name %>')">❯</button>
                  </div>
                </div>
              </details>
            <% }) %>
          </div>
        </div>
      <% } %>
      <% folderStructure.forEach(folder => { renderFolder(folder); }) %>
    </div>
  </div>

  <!-- Footer Section -->
  <footer id="foots">
    <div class="footer-container">
      <p>&copy; 2025 AUDIST HERBS. All rights reserved.</p>
      <p>Contact us at: <a href="mailto:info@audistherbs.com">sskumar2k@gmail.com</a></p>
    </div>
  </footer>

  <!-- Carousel Script -->
  <script>
    function nextSlide(carouselId) {
      const carousel = document.getElementById(carouselId);
      const images = carousel.querySelectorAll('img');
      const currentTransform = getComputedStyle(carousel).transform;
      const currentTranslateX = currentTransform !== 'none' ? parseFloat(currentTransform.split(',')[4]) : 0;
      const imageWidth = images[0].clientWidth;
      const maxTranslateX = -(images.length - 1) * imageWidth;

      if (currentTranslateX > maxTranslateX) {
        carousel.style.transform = `translateX(${currentTranslateX - imageWidth}px)`;
      }
    }

    function prevSlide(carouselId) {
      const carousel = document.getElementById(carouselId);
      const images = carousel.querySelectorAll('img');
      const currentTransform = getComputedStyle(carousel).transform;
      const currentTranslateX = currentTransform !== 'none' ? parseFloat(currentTransform.split(',')[4]) : 0;
      const imageWidth = images[0].clientWidth;

      if (currentTranslateX < 0) {
        carousel.style.transform = `translateX(${currentTranslateX + imageWidth}px)`;
      }
    }
  </script>
</body>
</html>
